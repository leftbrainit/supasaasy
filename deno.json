{
  "workspace": ["./packages/supasaasy", "./examples/starter"],
  "tasks": {
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check packages/supasaasy/mod.ts",
    "test": "deno test --allow-env --allow-read --allow-net packages/supasaasy/",
    "test:watch": "deno test --allow-env --allow-read --allow-net --watch packages/supasaasy/",
    "test:coverage": "deno test --allow-env --allow-read --allow-net --coverage=coverage packages/supasaasy/ && deno coverage coverage",
    "publish": "cd packages/supasaasy && deno publish"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
